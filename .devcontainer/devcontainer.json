{
    "name": "mickeyf-backend",

    "build": {

        "dockerfile": "Dockerfile"

    },
    
    "mounts": [
        "source=${localEnv:HOME}/.config/gcloud,target=/home/node/.config/gcloud,type=bind,consistency=cached"
    ],

    "remoteEnv": {
        "CLOUDSDK_CONFIG": "/home/node/.config/gcloud"
    },

    "workspaceFolder": "/workspaces/mickeyf.org",

    "remoteUser": "node",

    "customizations": {

        "vscode": {

            "extensions": [

                "dbaeumer.vscode-eslint",

                "esbenp.prettier-vscode"

            ]
        }
    },
    "postStartCommand": "cd backend && ./scripts/dev-db.sh"
}
