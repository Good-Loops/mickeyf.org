{
    "compilerOptions": {
        "jsx": "react-jsx",
        "target": "ES2016",
        "module": "esnext",
        "moduleResolution": "bundler",
        "outDir": "public/dist",
        "baseUrl": "./",
        "paths": {
            "@/*": ["ts/*"]
        },
        "sourceMap": true,
        "allowJs": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    },
    "include": [
        "**/*.ts", 
        "ts/**/*.tsx"    
    ],
    "exclude": [
        "node_modules"
    ]
}