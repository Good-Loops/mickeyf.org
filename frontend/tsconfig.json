{
    "compilerOptions": {
        "target": "ES2016",
        "module": "esnext",
        "moduleResolution": "bundler",
        "outDir": "public/dist",
        "baseUrl": "./",
        "sourceMap": true,
        "allowJs": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}