{
    "restoreTerminals.terminals": [
        {
            "splitTerminals": [
                {
                    "name": "front",
                    "commands": [
                        "cd frontend && npm run dev"
                    ]
                }
            ]
        },
        {
            "splitTerminals": [
                {
                    "name": "back-compiler",
                    "commands": [
                        "cd backend && npm run dev"
                    ]
                }
            ]
        },
        {
            "splitTerminals": [
                {
                    "name": "back-server",
                    "commands": [
                        "cd backend && until nc -z 127.0.0.1 3306; do echo \"Waiting for Cloud SQL Proxy on 3306...\"; sleep 1; done; npm run serve"
                    ]
                }
            ]
        },
        {
            "splitTerminals": [
                {
                    "name": "proxy",
                    "commands": [
                        "cd ~ && echo 'Run: ./cloud-sql-proxy \"noted-reef-387021:us-central1:cms-mickeyf\" --port 3306'"
                    ]
                }
            ]
        },
        {
            "splitTerminals": [
                {
                    "name": "general",
                }
            ]
        }
    ],
    "terminal.integrated.defaultProfile.linux": "bash"
}